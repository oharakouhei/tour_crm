<%= form_for(@customer) do |f| %>
  <div class="form-group">
      <%= f.label :family_name %>
      <%= f.text_field :family_name, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :given_name %>
      <%= f.text_field :given_name, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
  </div>
  <%= f.submit %>
<% end %>