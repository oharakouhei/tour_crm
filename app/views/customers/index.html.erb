<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-12">

    <%= search_form_for @q do |f| %>
      <div class="row">
        <div class="col-sm-2 col-xs-12">
          <div class="form-group">
            <%= f.label :family_name, "姓" %>
            <%= f.search_field :family_name_cont, class: "form-control input-sm"  %>
          </div> <!-- form-group -->
        </div> <!-- col-sm-2 col-xs-12 -->
        <div class="col-sm-2 col-xs-12">
          <div class="form-group">
            <%= f.label :given_name, "名" %>
            <%= f.search_field :given_name_cont, class: "form-control input-sm"  %>
          </div> <!-- form-group -->
        </div> <!-- col-sm-2 col-xs-12 -->
        <div class="col-sm-2 col-xs-12">
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.search_field :email_cont, class: "form-control input-sm"  %>
          </div> <!-- form-group -->
        </div> <!-- col-sm-2 col-xs-12 -->
        <div class="col-sm-2 col-xs-12">
          <div class="form-group">
            <%= f.label :company_name, "会社名" %>
            <%= f.search_field :company_name_cont, class: "form-control input-sm"  %>
          </div> <!-- form-group -->
        </div> <!-- col-sm-2 col-xs-12 -->
        <div class="col-sm-2 col-xs-12">
          <div class="form-group">
            <%= f.label :post_name, "役職名" %>
            <%= f.search_field :post_name_cont, class: "form-control input-sm"  %>
          </div> <!-- form-group -->
        </div> <!-- col-sm-2 col-xs-12 -->
      </div> <!-- row -->
      <div class="row">
        <div class="col-xs-12 text-center">
          <%= f.submit "検索", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
    <h1>顧客情報一覧</h1>
    <p>お客様情報が表示されます。</p>
    <table class="table table-striped">
      <thead>
        <th>姓</th>
        <th>名</th>
        <th>電子メール</th>
        <th>所属会社</th>
        <th>役職</th>
        <th>リンク</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.family_name %></td>
            <td><%= customer.given_name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.company.name %></td>
            <td><%= customer.post.name %></td>
            <td><%= link_to '詳細', customer, class: "btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @customers %>

  </div> <!-- col-lg-12 -->
</div> <!-- row -->
